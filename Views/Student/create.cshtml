@{
    ViewData["Title"] = "Create student score";
}
@model GradeView.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h1 class="text-center"> Create Student Score</h1>
<form method="POST" style="display: flex; gap:20px; flex-direction: column;" asp-action="Create" asp-controller="Student">
    <div class="form-group">
        <label asp-for="Name">Student Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter student name" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Student Surname</label>
        <input type="text" class="form-control" asp-for="Surname" placeholder="Enter student Surname" required>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Student date of birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" placeholder="Enter student DateOfBirth" required>
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender">Student Gender</label>
        <input type="text" class="form-control" asp-for="Gender" placeholder="Enter student Gender" required>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year">Student Year</label>
        <input type="text" class="form-control" asp-for="Year" placeholder="Enter student Year" required>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Student Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Enter student Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Student Password</label>
        <input type="password" class="form-control" asp-for="Password" id="Password" placeholder="Enter student Password" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm student Password" required>
        <span id="passwordMatch" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var passwordInput = document.getElementById('Password');
        var confirmPasswordInput = document.getElementById('ConfirmPassword');
        var passwordMatchMessage = document.getElementById('passwordMatch');

        confirmPasswordInput.addEventListener('input', function () {
            var password = passwordInput.value;
            var confirmPassword = confirmPasswordInput.value;

            if (password === confirmPassword) {
                passwordMatchMessage.textContent = '';
            } else {
                passwordMatchMessage.textContent = 'Passwords do not match';
            }
        });
    });
</script>