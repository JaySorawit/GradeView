@model IEnumerable<GradeView.Models.Student>
@{
    ViewData["Title"] = "Student score";
}
@if (Model.Count() <= 0)
{
    <div class="alert alert-secondary"> Not found student</div>
}
else
{
    <h1> Student score</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Student Id</th>
                <th>Student Name</th>
                <th>Student Score</th>
                <th>Student Status</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
            <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Score</td>
                    @if (student.Score >= 60)
                    {
                        <td>Pass</td>
                    }
                    else
                    {
                        <td>Fail</td>
                    }
                    <td>
                        <a class="btn btn-warning"
                        asp-controller="Student"
                        asp-action="Edit" 
                        asp-route-id="@student.Id" >Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                        asp-controller="Student"
                        asp-action="Delete" 
                        asp-route-id="@student.Id"
                        onclick="return confirm('Do you want to delete @student.Name ?')">Delete</a>
                    </td>
            </tr>
            }
        </tbody>
    </table>
}


