@{
    ViewData["Title"] = "Login";
}
@model Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body style="background-color: #8567dc;>
    <div class="container">
        <div class="row mx-auto" style="margin-top: 100px;width: 75%;box-shadow: 0px 5px 20px #3e3e3e;border-radius: 15px;">
            <div class="col-4 p-4" style="background-color: #f8f8f8; border-radius: 15px 0 0 15px;">
                <h4 style="padding: 20px 20px 0px; color:#2b1d7a">Log In</h4>
                <form method="post" asp-controller="Account" asp-action="Index">
                    <div style="display: flex; 
                    flex-direction: column;
                    margin: 0 auto;
                    gap: 20px;
                    padding:20px;">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="you@example.com"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Enter password"/>
                            <span asp-validation-for="Password" class="text-danger" style="font-size: small;"></span>
                        </div>
                    <button type="submit" class="btn btn-primary" style="background-color: #583bf5; border: solid 1px #583bf5;">Log In</button>
                    <a asp-controller="Student" asp-action="create" style="font-size: small; text-decoration:none;"> Doesn't have an account yet?</a>
                    </div>
                </form>
                
            </div>
            <div class="col-8" style="background-color: #fff; border-radius: 0 15px 15px 0; display: flex; justify-content: center; align-items: center;">
                <img src="@Url.Content("~/img/LogIn.svg")" alt="Login" style="width: 100%; max-height: 80%;" />
            </div>
        </div>
    </div>
</body>
</html>

