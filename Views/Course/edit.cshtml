@{
    ViewData["Title"] = "Edit Course";
}
@model Course

<h1>Edit Course</h1>
<Form method="POST" style="display: flex; gap:20px; flex-direction: column;" asp-action="Edit" asp-controller="Course">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Course Code</label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Course Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Credit" class="control-label">Course Credit</label>
        <input asp-for="Credit" class="form-control" type="text" maxlength="1" size="1"/>
        <span asp-validation-for="Credit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherId" class="control-label">Course Teacher</label>
        <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</Form>